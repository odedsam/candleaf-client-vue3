{
  "compilerOptions": {
    "strict": false,
    "lib": ["ES2022", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "types": ["vite/client", "vue", "vitest", "vitest/globals", "@pinia/testing", ],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
      // "@tests/*": ["./tests/*"]
    },
    "skipLibCheck": true
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
